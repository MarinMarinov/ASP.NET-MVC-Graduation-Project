@model Auction.Web.Models.CreateAuctionModel

<h2>Create Auction</h2>
@if (TempData["Success"] != null)
{
    <div class="row">
        @TempData["Success"]
    </div>
}

@using (Html.BeginForm("CreateAuction", "Auction", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="row">
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name)
    </div>
    <div class="row">
        @Html.LabelFor(m => m.ItemTitle)
        @Html.EditorFor(m => m.ItemTitle)
    </div>
    <div class="row">
        @Html.LabelFor(m => m.DateOfAuction)
        @Html.TextBoxFor(m => m.DateOfAuction, new { @Value = DateTime.Now, id = "datepicker" })
    </div>

    @Html.Submit()
}

@section scripts{
    <script>
        $(document).ready(function() { $("#datepicker").datepicker({ dateFormat: 'dd-mm-yy' }).Val() });
    </script>
}


