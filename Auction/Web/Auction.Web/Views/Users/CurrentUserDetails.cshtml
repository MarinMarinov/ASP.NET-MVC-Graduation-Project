@model Auction.Web.ViewModels.User.UserViewModel

@{
    ViewBag.Title = "CurrentUserDetails";
}

<h2>Your Details</h2>
<p>ID: @Model.Id</p>
<p>Username: @Model.UserName</p>
<p>Username: @Model.FirstName</p>
<p>Username: @Model.LastName</p>
<p>Phione number: @Model.PhoneNumber</p>


@if (Model.AvatarFileName != null)
{
    <img src="@Url.Action("GetImage", "Users", new { fileName = Model.AvatarFileName })" width="248" height="248" alt="Avatar" />
}
else
{
    <span>No avatar uploaded</span>
}


<h3>Change Avatar</h3>

<div class="form-group">
    <div class="col-md-10">
        <form method="post" enctype="multipart/form-data">
            <input type="file" name="file" class="btn btn-success" accept="image/*" />
            <br/>
            @Html.Submit(new { @class = "btn btn-danger" })
        </form>
    </div>
</div>


